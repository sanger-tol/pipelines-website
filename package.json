{
    "name": "pipelines.tol.sanger.ac.uk",
    "version": "1.0.0",
    "description": "<img src=\"public_html/assets/img/logo/samger-tol-logo.png\" width=\"400\">",
    "main": "index.js",
    "scripts": {
        "watch-sass": "sass --load-path=node_modules/ --watch public_html/assets/scss:public_html/assets/css",
        "compile-sass": "sass --load-path=node_modules/ public_html/assets/scss:public_html/assets/css",
        "prefix-css": "postcss --use autoprefixer -b 'last 5 versions' --replace public_html/assets/css/*nf-core*.css ",
        "compress-css": "sass --load-path=node_modules/ public_html/assets/scss:public_html/assets/css --style compressed",
        "copy-assets": "cp $(cat public_html/assets/lib/to_copy.txt) public_html/assets/lib",
        "build-css": "npm run compile-sass && npm run prefix-css && npm run compress-css",
        "build-prod": "npm run copy-assets && npm run build-css",
        "lint": "prettier --check .",
        "format": "prettier --write ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sanger-tol/pipelines-website.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sanger-tol/pipelines-website/issues"
    },
    "homepage": "https://github.com/sanger-tol/pipelines-website#readme",
    "dependencies": {
        "@highlightjs/cdn-assets": "^11.6.0",
        "autoprefixer": "^10.0.2",
        "aws-sdk": "^2.1423.0",
        "chart.js": "^2.9.4",
        "chartjs-plugin-zoom": "^0.7.7",
        "datatables.net": "^1.11.3",
        "datatables.net-bs5": "^1.13.5",
        "file-saver": "^2.0.5",
        "hammerjs": "^2.0.8",
        "jquery": "^3.6.0",
        "leaflet": "^1.9.4",
        "moment": "^2.29.4",
        "moment-timezone": "^0.5.43",
        "postcss-cli": "^8.2.0",
        "sass": "^1.29.0",
        "showdown": "^1.9.1",
        "tablesorter": "^2.31.3"
    },
    "devDependencies": {
        "bootstrap": "5.1.1",
        "bootstrap-dark-5": "1.1.1",
        "bootstrap-print-css": "^1.0.1",
        "@prettier/plugin-php": "^0.18.4",
        "prettier": "^2.6.1"
    }
}
